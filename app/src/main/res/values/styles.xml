<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/appBackground</item>
        <item name="colorPrimaryDark">@color/appBackground</item>
        <item name="colorAccent">@color/blackLight</item>
        <item name="colorButtonNormal">@color/blackLight</item>
        <item name="colorControlActivated">@color/blackLight</item>
        <item name="colorControlNormal">@color/blackLight</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
